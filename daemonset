apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: sam
  namespace: prod
  labels:
    coc: coc
    env: prod
spec:
  selector:
    matchLabels:
      sai: sai
  template:
    metadata:
      labels:
        sai: sai
    spec:
      hostNetwork: true
      hostPID: true
      containers:
        - name: job
          image: dilipdara/image1
          ports:
            - containerPort: 8080
---
apiVersion: v1 
kind: Service
metadata: 
  name: job1
  namespace: prod
spec:
  type: LoadBalancer
  selector:
    sai: sai
  ports:
    - port: 8080
      targetPort: 8080
