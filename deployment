apiVersion: apps/v1
kind: Deployment
metadata:
  name: sam
  namespace: prod
  labels: 
    app: app
    env: prod
spec:
  replicas: 2
  selector:
    matchLabels:
      sai: sai
  template:
    metadata:
      labels:
        sai: sai
    spec:
      containers:
        - name: got
          image: image1/mongo
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
