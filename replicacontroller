apiVersion: v1
kind: ReplicationController
metadata:
  name: sam
  namespace: prod 
  labels:
    app: app
    env: prod
spec:
  replicas: 2
  selector:
    sai: sai
  template:
    metadata:
      labels:
        sai: sai
    spec:
      containers:
        - name: dilip
          image: dilipdara/image1
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: bh
  namespace: prod
spec:
  type: LoadBalancer
  selector:
    sai: sai
  ports:
    - port: 8080
      targetPort: 8080
      
